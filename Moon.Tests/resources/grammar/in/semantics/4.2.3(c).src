class A {
  public sum(integer arr[], integer size) : integer;
}

A::sum(integer arr[], integer size) : integer
  local
    integer sum;
    integer n;
    integer i;
  do
    sum = 0;
    n = size;
    i = 0;
    while (i<n)
      do
        sum = sum + arr[i];
        i = i + 1;
      end;

    return (sum);
  end

